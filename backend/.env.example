# BC Legal Tech - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/bc_legal_db

# Redis
REDIS_URL=redis://localhost:6379

# AWS/S3 (LocalStack for development)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566
S3_BUCKET_NAME=bc-legal-documents

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
ENVIRONMENT=development
DEBUG=true

# OpenAI API (Get your key from https://platform.openai.com/api-keys)
# IMPORTANT: Add your actual key to .env file (which is gitignored)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=false
SMTP_SSL=false
EMAIL_FROM=noreply@bclegaltech.com
EMAIL_FROM_NAME=BC Legal Tech
