{
	"info": {
		"_postman_id": "bc-legal-tech-api",
		"name": "BC Legal Tech API",
		"description": "Complete API collection for BC Legal Tech authentication system.\n\nFeatures:\n- Company registration\n- User authentication (login)\n- JWT token management\n- Refresh tokens\n- Password reset flow\n- Email testing\n\nSetup:\n1. Import this collection\n2. Import the environment file\n3. Start backend server\n4. Run requests in order",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register Company",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save tokens to environment",
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('access_token', response.token.access_token);",
									"    pm.environment.set('refresh_token', response.token.refresh_token);",
									"    pm.environment.set('user_id', response.user.id);",
									"    pm.environment.set('company_id', response.company.id);",
									"    console.log('✓ Tokens saved to environment');",
									"}",
									"",
									"// Verify response structure",
									"pm.test('Status code is 201', () => {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Response has user data', () => {",
									"    pm.expect(pm.response.json()).to.have.property('user');",
									"});",
									"",
									"pm.test('Response has company data', () => {",
									"    pm.expect(pm.response.json()).to.have.property('company');",
									"});",
									"",
									"pm.test('Response has tokens', () => {",
									"    const response = pm.response.json();",
									"    pm.expect(response.token).to.have.property('access_token');",
									"    pm.expect(response.token).to.have.property('refresh_token');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"company_name\": \"{{company_name}}\",\n  \"admin_email\": \"{{admin_email}}\",\n  \"admin_password\": \"{{admin_password}}\",\n  \"admin_first_name\": \"{{admin_first_name}}\",\n  \"admin_last_name\": \"{{admin_last_name}}\",\n  \"plan_tier\": \"professional\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/register",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "register"]
						},
						"description": "Register a new company with admin user.\n\nCreates:\n- New company\n- Admin user\n- Default user groups\n- Returns access and refresh tokens"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save tokens",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('access_token', response.token.access_token);",
									"    pm.environment.set('refresh_token', response.token.refresh_token);",
									"    console.log('✓ New tokens saved');",
									"}",
									"",
									"pm.test('Status code is 200', () => {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response has tokens', () => {",
									"    const response = pm.response.json();",
									"    pm.expect(response.token).to.have.property('access_token');",
									"    pm.expect(response.token).to.have.property('refresh_token');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"{{admin_password}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "Authenticate user with email and password.\n\nReturns:\n- User information\n- Company information\n- Access token (30 min)\n- Refresh token (30 days)"
					},
					"response": []
				},
				{
					"name": "Get Current User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', () => {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('User is authenticated', () => {",
									"    const response = pm.response.json();",
									"    pm.expect(response).to.have.property('user');",
									"    pm.expect(response.user).to.have.property('email');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/me",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "me"]
						},
						"description": "Get current authenticated user information.\n\nRequires: Valid JWT token\n\nReturns:\n- User profile\n- Company details\n- Fresh access token"
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save new tokens",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('access_token', response.access_token);",
									"    pm.environment.set('refresh_token', response.refresh_token);",
									"    console.log('✓ Tokens refreshed and saved');",
									"}",
									"",
									"pm.test('Status code is 200', () => {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Returns new tokens', () => {",
									"    const response = pm.response.json();",
									"    pm.expect(response).to.have.property('access_token');",
									"    pm.expect(response).to.have.property('refresh_token');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/refresh",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "refresh"]
						},
						"description": "Refresh access token using refresh token.\n\nSecurity:\n- Old refresh token is revoked (token rotation)\n- Returns new access and refresh tokens\n- One-time use only"
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/logout",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "logout"]
						},
						"description": "Logout user (client-side token removal).\n\nNote: Currently just returns success message.\nClient should remove tokens from storage."
					},
					"response": []
				}
			],
			"description": "Authentication endpoints for user registration, login, and token management."
		},
		{
			"name": "Password Reset",
			"item": [
				{
					"name": "Request Password Reset",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', () => {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Success message returned', () => {",
									"    const response = pm.response.json();",
									"    pm.expect(response).to.have.property('message');",
									"});",
									"",
									"console.log('✓ Check MailHog at http://localhost:8025 for reset email');"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"{{admin_email}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/password-reset/request",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "password-reset", "request"]
						},
						"description": "Request password reset email.\n\nSecurity:\n- Always returns success (prevents email enumeration)\n- Email sent only if address exists\n- Old reset tokens invalidated\n- New token expires in 1 hour\n\nNext Steps:\n1. Check MailHog at http://localhost:8025\n2. Copy reset token from email link\n3. Save to environment variable: reset_token\n4. Use in Verify or Confirm requests"
					},
					"response": []
				},
				{
					"name": "Verify Reset Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Status code is 200', () => {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Token is valid', () => {",
									"    const response = pm.response.json();",
									"    pm.expect(response.valid).to.be.true;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{reset_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/password-reset/verify",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "password-reset", "verify"]
						},
						"description": "Verify reset token without consuming it.\n\nUse this to check if a token is valid before showing the reset form.\n\nNote: You must manually set the reset_token environment variable from the email."
					},
					"response": []
				},
				{
					"name": "Confirm Password Reset",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save new tokens (auto-login after reset)",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('access_token', response.token.access_token);",
									"    pm.environment.set('refresh_token', response.token.refresh_token);",
									"    ",
									"    // Update password in environment for future logins",
									"    pm.environment.set('admin_password', 'NewPassword123');",
									"    ",
									"    console.log('✓ Password reset successful');",
									"    console.log('✓ New tokens saved');",
									"    console.log('✓ Password updated in environment');",
									"}",
									"",
									"pm.test('Status code is 200', () => {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Returns user and tokens', () => {",
									"    const response = pm.response.json();",
									"    pm.expect(response).to.have.property('user');",
									"    pm.expect(response).to.have.property('token');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"{{reset_token}}\",\n  \"new_password\": \"NewPassword123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/password-reset/confirm",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "password-reset", "confirm"]
						},
						"description": "Complete password reset with new password.\n\nPassword Requirements:\n- Minimum 8 characters\n- At least one uppercase letter\n- At least one lowercase letter\n- At least one digit\n\nReturns:\n- User information\n- New access and refresh tokens (auto-login)\n\nSecurity:\n- Token marked as used (one-time only)\n- Cannot reuse same token"
					},
					"response": []
				}
			],
			"description": "Password reset flow: request, verify, and confirm."
		},
